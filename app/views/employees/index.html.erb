<h1>Listing employees</h1>

<table>
  <thead>
    <tr>
      <th>Employe</th>
      <th>Emp name</th>
      <th>Email</th>
      <th>Phone no</th>
      <th>Address</th>
      <th>Pan no</th>
      <th>Passport no</th>
      <th>Passport expry date</th>
      <th>Date of joining</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @employees.each do |employee| %>
      <tr>
        <td><%= employee.employe_id %></td>
        <td><%= employee.emp_name %></td>
        <td><%= employee.email_id %></td>
        <td><%= employee.phone_no %></td>
        <td><%= employee.address %></td>
        <td><%= employee.pan_no %></td>
        <td><%= employee.passport_no %></td>
        <td><%= employee.passport_expry_date %></td>
        <td><%= employee.date_of_joining %></td>
        <td><%= employee.user %></td>
        <td><%= link_to 'Show', employee %></td>
        <td><%= link_to 'Edit', edit_employee_path(employee) %></td>
        <td><%= link_to 'Destroy', employee, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

