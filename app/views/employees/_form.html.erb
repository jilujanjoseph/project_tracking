<%= form_for @employee, :html => { :class => 'form-horizontal form-model' } do |f| %>
  <div class="form-group">
    <%= f.label :employe_id, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.number_field :employe_id, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :emp_name, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :emp_name, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :email_id, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.email_field :email_id, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :phone_no, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.number_field :phone_no, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :address, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_area :address, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :pan_no, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.number_field :pan_no, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :passport_no, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.number_field :passport_no, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :passport_expry_date, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.date_select :passport_expry_date, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :date_of_joining, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.date_select :date_of_joining, :class => 'text-field form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class='col-md-offset-2 col-md-10'>
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                  employees_path, :class => 'btn btn-default' %>
    </div>
  </div>
<% end %>
