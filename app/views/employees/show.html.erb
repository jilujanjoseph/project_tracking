<%- model_class = Employee -%>
<div class="page-header">
  <h1><%=t '.title', :default => Employee %></h1>
</div>

<div class="fieldset">
  <dl>
      <dt class="label label-default"><%= model_class.human_attribute_name(:employe_id) %></dt>
      <dd><pre class="prettyprint"><%= @employee.employe_id %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:emp_name) %></dt>
      <dd><pre class="prettyprint"><%= @employee.emp_name %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:email_id) %></dt>
      <dd><pre class="prettyprint"><%= @employee.email_id %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:phone_no) %></dt>
      <dd><pre class="prettyprint"><%= @employee.phone_no %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:address) %></dt>
      <dd><pre class="prettyprint"><%= @employee.address %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:pan_no) %></dt>
      <dd><pre class="prettyprint"><%= @employee.pan_no %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:passport_no) %></dt>
      <dd><pre class="prettyprint"><%= @employee.passport_no %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:passport_expry_date) %></dt>
      <dd><pre class="prettyprint"><%= @employee.passport_expry_date %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:date_of_joining) %></dt>
      <dd><pre class="prettyprint"><%= @employee.date_of_joining %></pre></dd>
  </dl>
</div>

<div class="form-group">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              employees_path, :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_employee_path(@employee), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              employee_path(@employee),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>

